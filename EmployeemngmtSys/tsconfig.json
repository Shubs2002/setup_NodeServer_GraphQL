{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true, 
    "skipLibCheck": true,    
    "resolveJsonModule": true,    
    "allowSyntheticDefaultImports": true,      
    "isolatedModules": true,                    
    "noEmitOnError": true,      
    "types": ["node"],
    "allowJs": true
  },
   "include": ["src/**/*"],
  "exclude": ["dist"]
}