{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true, 
    "noImplicitAny": false,
    "skipLibCheck": true,    
    "resolveJsonModule": true,    
    "allowSyntheticDefaultImports": true,      
    "isolatedModules": true,                    
    "noEmitOnError": true,      
    "types": ["node"],
    "allowJs": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules","**/__tests__/**", "tests", "**/*.test.ts"]
}